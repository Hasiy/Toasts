<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="top.hasiy.toastsDemo.MainActivity">

    <Button
            android:text="错误信息toasts"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/button1"
            android:background="@color/colorPrimary"
            android:textColor="@color/defaultTextColor"
            tools:ignore="HardcodedText"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    <Button
            android:text="成功信息toasts"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/button2"
            android:background="@color/colorPrimary"
            android:textColor="@color/defaultTextColor"
            tools:ignore="HardcodedText"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button1"/>
    <Button
            android:text="一般信息toasts"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/button3"
            android:background="@color/colorPrimary"
            android:textColor="@color/defaultTextColor"
            tools:ignore="HardcodedText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"/>
    <Button
            android:text="警告信息toasts"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/button4"
            android:background="@color/colorPrimary"
            android:textColor="@color/defaultTextColor"
            tools:ignore="HardcodedText"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"/>
    <Button
            android:text="默认toasts 无icon"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/button5"
            android:background="@color/colorPrimary"
            android:textColor="@color/defaultTextColor"
            tools:ignore="HardcodedText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/button4"/>

    <Button
            android:text="默认toasts 有icon"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/button6"
            android:background="@color/colorPrimary"
            android:textColor="@color/defaultTextColor"
            tools:ignore="HardcodedText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/button5"/>

    <Button
            android:text="粗体斜体字toasts"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/button7"
            android:background="@color/colorPrimary"
            android:textColor="@color/defaultTextColor"
            tools:ignore="HardcodedText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/button6"/>

    <Button
            android:text="个性化字体toasts"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/Button8"
            android:background="@color/colorPrimary"
            android:textColor="@color/defaultTextColor"
            tools:ignore="HardcodedText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/button7"/>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/button1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center_vertical">

        <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/toast"
                android:contentDescription="@null"/>

    </RelativeLayout>

    <Switch
            android:text="吐司时间长短"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            tools:ignore="HardcodedText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/button1"/>

</androidx.constraintlayout.widget.ConstraintLayout>